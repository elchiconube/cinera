---
interface QA { question: string; answer: string; }
interface Props {
  items?: QA[];
  title?: string;
  subtitle?: string;
}
const { 
  items = [] as QA[], 
  title = "¿Tienes preguntas?<br />Aquí están las respuestas.",
  subtitle = "Todo lo que necesitas saber sobre el Faedo de Ciñera."
} = Astro.props;
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: items.map((q) => ({
    '@type': 'Question',
    name: q.question,
    acceptedAnswer: { '@type': 'Answer', text: q.answer },
  })),
};
---
<section class="container py-8 md:py-12">
  <div class="max-w-2xl mx-auto lg:text-balance">
    <h1 
      class="text-2xl md:text-3xl lg:text-4xl font-semibold tracking-tight text-gray-900 dark:text-white"
      set:html={title}
    />
    <p class="text-base mt-2 font-medium text-gray-700 dark:text-gray-300">
      {subtitle}
    </p>
    <dl class="flex flex-col pt-12 mt-12 border-t gap-12 border-gray-200 dark:border-gray-700">
      {items.map((q) => (
        <div>
          <dt>
            <h3 class="text-lg md:text-xl font-semibold text-gray-900 dark:text-white">
              {q.question}
            </h3>
          </dt>
          <dd>
            <p class="text-sm mt-2 font-medium text-gray-700 dark:text-gray-300">
              {q.answer}
            </p>
          </dd>
        </div>
      ))}
    </dl>
  </div>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
</section>

