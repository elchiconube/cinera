---
interface Props {
  title: string;
  description: string;
  icon?: string;
  bgColor?: string;
  textColor?: string;
}

const {
  title,
  description,
  icon,
} = Astro.props;
---

<header class="text-center max-w-2xl mx-auto mb-10">
  {icon && <div class="inline-block rounded-full bg-emerald-100 p-4 text-emerald-700 mb-2">
    <svg width="32" height="32" fill="currentColor" viewBox="0 0 256 256">
      <path d={icon}></path>
    </svg>
  </div>}
  <h2 class="text-3xl mb-2 text-emerald-800 text-balance">{title}</h2>
  <p class="text-balance text-emerald-800 font-medium leading-6">
    {description}
  </p>
</header>